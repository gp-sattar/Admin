<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/minimum"
    android:layout_marginTop="@dimen/minimum"
    android:layout_marginRight="@dimen/minimum">

    <RelativeLayout
        android:layout_height="@dimen/cardView_height"
        android:background="@drawable/cardview_background"
        android:layout_width="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/minimum"
            android:id="@+id/profile_today_attendance"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bg_4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sattar Mohammad"
            android:textColor="@color/black"
            android:id="@+id/nameView_today_attendance"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/profile_today_attendance"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/dp_20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning :"
            android:id="@+id/morningTag"
            android:textColor="@color/black"
            android:layout_below="@+id/nameView_today_attendance"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/profile_today_attendance"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:id="@+id/morningStatus"
            android:textColor="@color/black"
            android:layout_below="@+id/nameView_today_attendance"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/morningTag"
            android:layout_marginLeft="@dimen/minimum"
            android:textSize="@dimen/dp_15"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evening :"
            android:id="@+id/eveningTag"
            android:textColor="@color/black"
            android:layout_below="@+id/nameView_today_attendance"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/morningStatus"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:id="@+id/eveningStatus"
            android:textColor="@color/black"
            android:layout_below="@+id/nameView_today_attendance"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/eveningTag"
            android:layout_marginLeft="@dimen/minimum"
            android:textSize="@dimen/dp_15"
            />


    </RelativeLayout>
</android.support.v7.widget.CardView>